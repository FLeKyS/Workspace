<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="@dimen/spinnerWidth"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textSize="@dimen/textSizeButton"
        android:background="@color/white"
        android:entries="@array/graphic_mode"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:inputType="text"
        android:textSize="@dimen/textSizeButton"
        android:textColor="@color/white" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/textSizeSubTitle"
        android:text="@string/ModoGrafico"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="@dimen/propertiesMarginLeftScreen"
        android:layout_marginStart="@dimen/propertiesMarginLeftScreen"
        android:layout_marginTop="@dimen/propertiesMarginTopTitle"
        android:textSize="@dimen/textSizeSubTitle"
        android:text="@string/TituloAventura"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_alignStart="@+id/spinner1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/propertiesMarginTopTitle"
        android:text="@string/Properties"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeTitle" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/spinner1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="22dp"
        android:minHeight="@dimen/buttonMinHeight"
        android:minWidth="@dimen/buttonMinWidth"
        android:text="@string/Continuar"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="@dimen/spinnerWidth"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1"
        android:background="@color/grey"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

</RelativeLayout>
