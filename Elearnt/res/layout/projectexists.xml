<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/spinner1"
        android:layout_marginBottom="32dp"
        android:minHeight="@dimen/buttonMinHeight"
        android:minWidth="@dimen/buttonMinWidth"
        android:text="@string/Continuar"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="@dimen/spinnerWidth"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_alignTop="@+id/editText1"
        android:background="@color/grey"
        android:entries="@array/option_properties"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/spinner1"
        android:layout_toEndOf="@+id/spinner1"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" >

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="@dimen/spinnerWidth"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignTop="@+id/editText1"
        android:layout_toEndOf="@+id/editText1"
        android:layout_toRightOf="@+id/editText1"
        android:background="@color/white"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="@dimen/propertiesMarginLeftScreen"
        android:layout_marginTop="32dp"
        android:text="@string/aventuraExiste"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeSubTitle" />

</RelativeLayout>