<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editText2"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" >

        <requestFocus />
    </EditText>

    <RadioGroup
        android:id="@+id/rdG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_below="@+id/editText2" >

        <RadioButton
            android:id="@+id/radbtnFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scenesMarginTopEditText"
            android:text="@string/TomarImagen"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeButton" />

        <RadioButton
            android:id="@+id/radbtnGall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ObtenerGaleria"
            android:textColor="@color/white"
            android:textSize="@dimen/textSizeButton" />
    </RadioGroup>

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_toRightOf="@+id/spinner2"
        android:layout_toEndOf="@+id/spinner2"
        android:minHeight="@dimen/buttonMinHeight"
        android:minWidth="@dimen/buttonMinWidth"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="@dimen/spinnerWidth"
        android:layout_height="@dimen/spinnerHeight"
        android:layout_alignLeft="@+id/rdG"
        android:layout_alignStart="@+id/rdG"
        android:layout_alignTop="@+id/button2"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/scenesMarginTopRdbGall"
        android:entries="@array/option_scene"
        android:textSize="@dimen/textSizeButton"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="@dimen/scenesMarginTopTitle"
        android:text="@string/nombre"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeSubTitle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2"
        android:text="@string/Scenes"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeTitle" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText2"
        android:layout_toEndOf="@+id/textView1"
        android:layout_toRightOf="@+id/editText2"
        android:minHeight="@dimen/buttonMinHeight"
        android:minWidth="@dimen/buttonMinWidth"
        android:text="@string/Buscar"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/rdG"
        android:layout_marginRight="@dimen/scenesMarginRightScreen"
        android:layout_marginEnd="@dimen/scenesMarginRightScreen"
        android:layout_marginLeft="@dimen/scenesMarginLeftTitle"
        android:layout_marginStart="@dimen/scenesMarginLeftTitle"
        android:layout_toEndOf="@+id/rdG"
        android:layout_toRightOf="@+id/textView2"
        android:minHeight="@dimen/buttonMinHeight"
        android:minWidth="@dimen/buttonMinWidth"
        android:text="@string/Finalizar"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeButton" />

</RelativeLayout>