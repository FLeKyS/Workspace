<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.elearnt"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_elearnt"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
		<activity
            android:name="project.elearnt.Main"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Properties" android:screenOrientation="landscape"></activity>
        <activity android:name="Scenes" android:screenOrientation="landscape"></activity>
        <activity android:name="Exits" android:screenOrientation="landscape"></activity>
        <activity android:name="MakeExits" android:screenOrientation="landscape"></activity>
        <activity android:name="CorrectLinkScene" android:screenOrientation="landscape"></activity>
        <activity android:name="Finish" android:screenOrientation="landscape"></activity>
        <activity android:name="ScenesGallery" android:screenOrientation="landscape"></activity>
        <activity android:name="ProjectExists" android:screenOrientation="landscape"></activity>
        
    </application>

</manifest>
